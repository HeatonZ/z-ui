{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules",
    "node_modules",
    "example",
  ]
}